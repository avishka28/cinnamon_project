# ============================================================================
# Ceylon Cinnamon E-commerce - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update the values for your environment.
# NEVER commit the .env file to version control!
# Requirements: 10.5 (HTTPS enforcement and secure configuration)
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
# APP_NAME: Display name for the application (used in emails, titles, etc.)
APP_NAME="Ceylon Cinnamon"

# APP_URL: Base URL of your application (no trailing slash)
# Development: http://localhost or http://localhost:8080
# Production: https://yourdomain.com
APP_URL=http://localhost

# APP_ENV: Environment mode (development, staging, production)
# - development: Shows detailed errors, enables debug features
# - staging: Similar to production but may have test data
# - production: Hides errors, optimizes performance
APP_ENV=development

# APP_DEBUG: Enable/disable debug mode (true/false)
# WARNING: Set to false in production to hide sensitive error details
APP_DEBUG=true

# APP_TIMEZONE: Default timezone for the application
# See: https://www.php.net/manual/en/timezones.php
APP_TIMEZONE=Asia/Colombo

# APP_LOCALE: Default language (en = English, si = Sinhala)
APP_LOCALE=en

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
# DB_HOST: Database server hostname
# - Local: localhost or 127.0.0.1
# - Docker: Use container name (e.g., mysql, db)
# - Remote: Use IP address or hostname
DB_HOST=localhost

# DB_PORT: MySQL port (default: 3306)
DB_PORT=3306

# DB_NAME: Database name
# Create this database before running the application
DB_NAME=ceylon_cinnamon

# DB_USER: Database username
# XAMPP default: root
# Production: Use a dedicated user with limited privileges
DB_USER=root

# DB_PASS: Database password
# XAMPP default: empty
# Production: Use a strong, unique password
DB_PASS=

# DB_CHARSET: Database character set (default: utf8mb4)
DB_CHARSET=utf8mb4

# ----------------------------------------------------------------------------
# SESSION CONFIGURATION
# ----------------------------------------------------------------------------
# SESSION_LIFETIME: Session timeout in seconds (default: 3600 = 1 hour)
SESSION_LIFETIME=3600

# SESSION_NAME: Name of the session cookie
SESSION_NAME=ceylon_session

# SESSION_SECURE: Only send cookie over HTTPS (true in production)
SESSION_SECURE=false

# SESSION_HTTPONLY: Prevent JavaScript access to session cookie
SESSION_HTTPONLY=true

# SESSION_SAMESITE: SameSite cookie attribute (Strict, Lax, None)
SESSION_SAMESITE=Strict

# ----------------------------------------------------------------------------
# FILE UPLOAD SETTINGS
# ----------------------------------------------------------------------------
# MAX_UPLOAD_SIZE: Maximum file upload size in bytes
# Default: 10485760 (10MB)
# Adjust based on your server's php.ini settings
MAX_UPLOAD_SIZE=10485760

# UPLOAD_PATH: Directory for uploaded files (relative to public/)
UPLOAD_PATH=uploads

# ----------------------------------------------------------------------------
# PAGINATION
# ----------------------------------------------------------------------------
# ITEMS_PER_PAGE: Default number of items per page in listings
ITEMS_PER_PAGE=20

# ----------------------------------------------------------------------------
# CDN CONFIGURATION (Optional)
# Requirements: 11.6 (CDN support for static assets)
# ----------------------------------------------------------------------------
# CDN_ENABLED: Enable CDN for static assets (true/false)
CDN_ENABLED=false

# CDN_URL: CDN base URL (e.g., https://cdn.yourdomain.com)
CDN_URL=

# CDN_TYPE: CDN provider type (generic, cloudflare, cloudfront, bunny)
CDN_TYPE=generic

# CDN_SUPPORTS_RESIZE: CDN supports image resizing (true/false)
CDN_SUPPORTS_RESIZE=false

# CDN_AUTO_WEBP: CDN automatically converts images to WebP (true/false)
CDN_AUTO_WEBP=false

# ----------------------------------------------------------------------------
# STRIPE PAYMENT GATEWAY
# Requirements: 4.1 (Stripe API integration in demo mode)
# ----------------------------------------------------------------------------
# Get your API keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_*, sk_test_*) for development/testing
# Use live keys (pk_live_*, sk_live_*) for production

# STRIPE_PUBLIC_KEY: Publishable key (safe to expose in frontend)
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here

# STRIPE_SECRET_KEY: Secret key (NEVER expose in frontend or commit to git)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# STRIPE_WEBHOOK_SECRET: Webhook signing secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# STRIPE_CURRENCY: Default currency for Stripe payments
STRIPE_CURRENCY=usd

# ----------------------------------------------------------------------------
# PAYPAL PAYMENT GATEWAY
# Requirements: 4.2 (PayPal API integration in demo mode)
# ----------------------------------------------------------------------------
# Get your credentials from: https://developer.paypal.com/dashboard/applications
# Use sandbox credentials for development/testing
# Use live credentials for production

# PAYPAL_CLIENT_ID: PayPal application client ID
PAYPAL_CLIENT_ID=your_paypal_client_id_here

# PAYPAL_SECRET: PayPal application secret
PAYPAL_SECRET=your_paypal_secret_here

# PAYPAL_MODE: PayPal environment (sandbox/live)
# - sandbox: For testing with test accounts
# - live: For real transactions
PAYPAL_MODE=sandbox

# PAYPAL_CURRENCY: Default currency for PayPal payments
PAYPAL_CURRENCY=USD

# ----------------------------------------------------------------------------
# BANK TRANSFER SETTINGS
# Requirements: 4.3 (Bank transfer payment option)
# ----------------------------------------------------------------------------
# BANK_NAME: Bank name for wire transfers
BANK_NAME=Bank of Ceylon

# BANK_ACCOUNT_NAME: Account holder name
BANK_ACCOUNT_NAME=Ceylon Cinnamon Exports Ltd

# BANK_ACCOUNT_NUMBER: Bank account number
BANK_ACCOUNT_NUMBER=1234567890

# BANK_SWIFT_CODE: SWIFT/BIC code for international transfers
BANK_SWIFT_CODE=BABORLK

# BANK_BRANCH: Bank branch name
BANK_BRANCH=Colombo Main Branch

# ----------------------------------------------------------------------------
# SMTP EMAIL CONFIGURATION
# Requirements: 12.4, 12.5 (SMTP configuration for email delivery)
# ----------------------------------------------------------------------------
# SMTP_HOST: SMTP server hostname
# - Gmail: smtp.gmail.com
# - Outlook: smtp.office365.com
# - Mailgun: smtp.mailgun.org
# - Local testing: localhost (with Mailhog/Mailcatcher)
SMTP_HOST=localhost

# SMTP_PORT: SMTP server port
# - 25: Standard SMTP (often blocked)
# - 465: SMTP with SSL
# - 587: SMTP with TLS (recommended)
# - 1025: Mailhog default
SMTP_PORT=587

# SMTP_USER: SMTP authentication username
SMTP_USER=

# SMTP_PASS: SMTP authentication password
# For Gmail: Use App Password, not your regular password
SMTP_PASS=

# SMTP_FROM_EMAIL: Default sender email address
SMTP_FROM_EMAIL=noreply@ceyloncinnamon.com

# SMTP_FROM_NAME: Default sender name
SMTP_FROM_NAME="Ceylon Cinnamon"

# SMTP_ENCRYPTION: Encryption method (tls, ssl, or empty for none)
SMTP_ENCRYPTION=tls

# SMTP_DEBUG: Enable SMTP debugging (0=off, 1=client, 2=client+server)
SMTP_DEBUG=0

# ----------------------------------------------------------------------------
# ADMIN NOTIFICATION SETTINGS
# ----------------------------------------------------------------------------
# ADMIN_EMAIL: Email address for admin notifications
# (new orders, wholesale inquiries, contact form submissions)
ADMIN_EMAIL=admin@ceyloncinnamon.com

# ADMIN_NOTIFICATION_ENABLED: Enable admin email notifications (true/false)
ADMIN_NOTIFICATION_ENABLED=true

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# Requirements: 10.2 (CSRF protection), 10.5 (HTTPS enforcement)
# ----------------------------------------------------------------------------
# CSRF_TOKEN_LIFETIME: CSRF token validity in seconds (default: 3600)
CSRF_TOKEN_LIFETIME=3600

# FORCE_HTTPS: Redirect all HTTP requests to HTTPS (true in production)
FORCE_HTTPS=false

# ALLOWED_HOSTS: Comma-separated list of allowed hostnames
# Leave empty to allow all hosts (not recommended for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# ----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# ----------------------------------------------------------------------------
# LOG_LEVEL: Minimum log level (debug, info, warning, error, critical)
LOG_LEVEL=debug

# LOG_PATH: Path to log files (relative to project root)
LOG_PATH=logs

# LOG_MAX_FILES: Maximum number of log files to keep
LOG_MAX_FILES=30

# ----------------------------------------------------------------------------
# CACHE CONFIGURATION (Optional)
# ----------------------------------------------------------------------------
# CACHE_ENABLED: Enable caching (true/false)
CACHE_ENABLED=false

# CACHE_DRIVER: Cache driver (file, redis, memcached)
CACHE_DRIVER=file

# CACHE_PATH: Path for file-based cache (relative to project root)
CACHE_PATH=cache

# CACHE_TTL: Default cache time-to-live in seconds
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# GOOGLE ANALYTICS (Optional)
# ----------------------------------------------------------------------------
# GA_TRACKING_ID: Google Analytics tracking ID (e.g., UA-XXXXXXXX-X or G-XXXXXXXXXX)
GA_TRACKING_ID=

# ----------------------------------------------------------------------------
# SOCIAL MEDIA LINKS (Optional)
# ----------------------------------------------------------------------------
SOCIAL_FACEBOOK=https://facebook.com/ceyloncinnamon
SOCIAL_INSTAGRAM=https://instagram.com/ceyloncinnamon
SOCIAL_TWITTER=https://twitter.com/ceyloncinnamon
SOCIAL_YOUTUBE=
SOCIAL_LINKEDIN=

# ----------------------------------------------------------------------------
# COMPANY INFORMATION
# ----------------------------------------------------------------------------
COMPANY_NAME=Ceylon Cinnamon Exports Ltd
COMPANY_ADDRESS=123 Cinnamon Gardens, Colombo 07, Sri Lanka
COMPANY_PHONE=+94 11 234 5678
COMPANY_EMAIL=info@ceyloncinnamon.com
COMPANY_VAT_NUMBER=LK123456789

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
